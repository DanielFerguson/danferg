{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": [
      "@astrojs/image/client"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "types/*": [
        "src/types/*"
      ],
    }
  }
}