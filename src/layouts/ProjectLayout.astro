  </div>

  <!-- Call to Action -->
  <div class="mx-auto max-w-7xl px-12 pb-24">
    <div
      class="overflow-hidden rounded-lg bg-indigo-700 shadow-xl lg:grid lg:grid-cols-2 lg:gap-4"
    >
      <div
        class="px-6 pt-10 pb-12 sm:px-16 sm:pt-16 lg:py-16 lg:pr-0 xl:py-20 xl:px-20"
      >
        <div class="lg:self-center">
