---
const navigation = [
  { name: "Projects", href: "/projects" },
  { name: "Talks", href: "/#talks" },
  { name: "Articles", href: "/articles" },
  { name: "Newsletters", href: "/newsletters" },
];
---

<nav
  class="flex flex-col items-center justify-between py-16 sm:h-10 sm:flex-row lg:justify-start"
>
  <!-- Icon -->
  <div class="flex flex-shrink-0 flex-grow items-center lg:flex-grow-0">
    <div class="flex w-full items-center justify-between md:w-auto">
      <a href="/">
        <span class="sr-only">Dan Ferg</span>
        <img
          alt="Dan Ferg"
          class="h-8 w-auto sm:h-10"
          src="/images/wave.png"
          format="png"
        />
      </a>
    </div>
  </div>

  <!-- Links -->
  <div
    class="mt-8 space-x-4 font-[Gordita] text-sm sm:mt-0 sm:text-base md:ml-10 md:space-x-10 md:pr-4"
  >
    {
      navigation.map((item) => (
        <a href={item.href} class="text-gray-500 hover:text-gray-900">
          {item.name}
        </a>
      ))
    }
    <a
      href="mailto:gday@danferg.com"
      class="sm: inline hidden font-medium text-indigo-600 hover:text-indigo-500"
    >
      Hire me!
    </a>
  </div>

  <!-- Empty -->
  <div></div>
</nav>
